<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.ControlRoomActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/appbar_padding"
            android:text="Control the lights using below buttons " />

    </LinearLayout>

    <Button
        android:id="@+id/room1Button"
        android:text="On#Room 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/room1OffButton"
        android:text="Off#Room 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dp" />

    <Button
        android:id="@+id/room2Button"
        android:text="On#Room 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room1Button"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/room2OffButton"
        android:text="Off#Room 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room1OffButton"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"

        android:layout_marginRight="70dp" />
    <Button
        android:id="@+id/unPairButton"
        android:text="UnPair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room2Button"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dp" />
</RelativeLayout>